<h1>Childrens of Muglandia</h1>

<div class="card-category" style="text-align:center; background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(mug.picture)">

  <div class="card-container">
    <h3>Available Mugs</h3>
    <div class="cards container" >
      <% @mugs.each do |mug| %>
          <div class="flip-card" style="padding-bottom: 500px;">
              <div class="flip-card-inner">
                <div class="flip-card-front">
                      <img src="<%= mug.picture%>" width = 300px>
                </div>

                <div class="flip-card-back">
                  <%=link_to mug_path(mug) do%>
                      <img src="<%= mug.picture%>" width = 300px>
                    <h3><%= mug.description %></h3>
                    <p>Size: <%= mug.size %></p>
                    <p>Price: <%= mug.price %></p>
                    <p>Color: <%= mug.color %></p>
                  <% end  %>
                </div>
              </div>
          </div>
      <% end %>
    </div>
  </div>
</div>
